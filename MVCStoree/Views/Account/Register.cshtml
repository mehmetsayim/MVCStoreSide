@model RegisterViewModel 
@{
    ViewData["Title"] = "Yeni Üyelik";
}
<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="d-none d-md-block col-md-5">
                <img src="~/images/register.png" class="img-fluid" />
            </div>
            <div class="col-md-7">
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PasswordVerify" class="form-label"></label>
                    <input asp-for="PasswordVerify" class="form-control" />
                    <span asp-validation-for="PasswordVerify"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="BirthDate" class="form-label"></label>
                    <input asp-for="BirthDate" class="form-control" />
                    <span asp-validation-for="BirthDate"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Gender" class="form-label"></label>
                    <select class="form-control" asp-items="@Html.GetEnumSelectList<Genders>()"></select>
                    <span asp-validation-for="Gender"></span>
                </div>
            </div>
        </div>        
    </div>
</div>